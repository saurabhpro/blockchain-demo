doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='A live blockchain demo in a browser.')
    meta(name='author', content='Anders Brownworth')
    link(rel='icon', href='/favicon.svg')

    title Blockchain Demo

    link(rel='stylesheet', href='/stylesheets/lib/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/lib/bootstrap-horizon.css')
    link(rel='stylesheet', href='/stylesheets/lib/ladda-themeless.min.css')
    link(rel='stylesheet', href='/stylesheets/blockchain.css')

    script(src='/javascripts/lib/jquery.min.js')
    script(src='/javascripts/lib/spin.min.js')
    script(src='/javascripts/lib/ladda.min.js')
    script(src='/javascripts/lib/sha256.js')
    script(src='/javascripts/blockchain.js')

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        .navbar-header
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarToggler01', aria-expanded='false', aria-controls='navbarToggler01', aria-label="Toggle navigation")
            span.navbar-toggler-icon
          a.navbar-brand(href='/') #{__('Blockchain Demo')}
        
        #navbarToggler01.collapse.show.navbar-collapse.justify-content-end
          ul.navbar-nav
            li.nav-item(class={active: page === 'hash'})
              a.nav-link(href='/hash') #{__('Hash')}
            li.nav-item(class={active: page === 'block'})
              a.nav-link(href='/block') #{__('Block')}
            li.nav-item(class={active: page === 'blockchain'})
              a.nav-link(href='/blockchain') #{__('Blockchain')}
            li.nav-item(class={active: page === 'distributed'})
              a.nav-link(href='/distributed') #{__('Distributed')}
            li.nav-item(class={active: page === 'tokens'})
              a.nav-link(href='/tokens') #{__('Tokens')}
            li.nav-item(class={active: page === 'coinbase'})
              a.nav-link(href='/coinbase') #{__('Coinbase')}

    block content
